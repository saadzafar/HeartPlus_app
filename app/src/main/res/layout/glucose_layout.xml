<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:text="Glucose"
        android:textColor="#000"
        android:textSize="25dip"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout"
        android:layout_weight="0.82"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Glucose Value"
            android:textStyle="bold"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:textSize="17dip"
            android:textColor="#000" />

        <EditText
            android:id="@+id/inputGlucose"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Your Glucose Value"
            android:layout_margin="5dip"
            android:layout_marginBottom="15dip"
            android:singleLine="true"
            android:textColor="@color/hint" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:layout_gravity="left"
            android:textSize="17dip"
            android:textColor="#000" />

        <TextClock
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/textClock"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:onClick="setDate"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/calendar"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Meal (before or after)"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:textSize="17dip"
            android:textColor="#000" />

        <EditText
            android:id="@+id/inputMeal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_marginBottom="15dip"
            android:singleLine="true"
            android:text="Any Meals?"
            android:textColor="@color/hint" />

        <!-- Button Create INR -->

        <Button
            android:id="@+id/btnCreateGlucose"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />


    </LinearLayout>

</LinearLayout>