<?xml version="1.0" encoding="utf-8"?>
<com.sgh.swinburne.heartplus.DashboardLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@color/background">

    <!-- Patient Education -->
    <Button
        android:id="@+id/btn_profile"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/graduation"
        android:paddingBottom="30dp"
        android:text="Pill List"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <!--  Medical Charts Button -->
    <Button
        android:id="@+id/btn_MedicalCharts"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/medical"
        android:text="Medical Charts"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <!--  Pill Reminder Button -->
    <Button
        android:id="@+id/btn_pillreminder"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/healthy"
        android:paddingTop="20dp"
        android:text="Pill Reminder"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--  Appointment Button -->
    <Button
        android:id="@+id/btn_test"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/music"
        android:paddingTop="20dp"
        android:text="Appointment Scheduler"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--  Emergency Button -->
    <Button
        android:id="@+id/btn_test2"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/transport"
        android:paddingTop="20dp"
        android:text="Emergency"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--  Feedback Button -->
    <Button
        android:id="@+id/btn_feedback"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/lists"
        android:paddingTop="20dp"
        android:text="Feedback"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</com.sgh.swinburne.heartplus.DashboardLayout>